{
    "name": "@trojs/lint",
    "version": "0.4.0",
    "description": "Lint rules",
    "type": "module",
    "main": "./src/index.js",
    "source": "./src/index.js",
    "module": "./src/index.js",
    "types": "./types/index.d.ts",
    "scripts": {
        "lint": "eslint --config ./src/eslint.config.js",
        "lint:fix": "eslint --config ./src/eslint.config.js --fix",
        "lint:report": "eslint --config ./src/eslint.config.js -f json -o report.json",
        "lint:rules": "eslint --config ./src/eslint.config.js --print-config ./src/index.js > eslintconfig.json",
        "lint:types": "tsc --noEmit --project tsconfig.json --skipLibCheck",
        "generate:types": "rm -rf ./types && tsc --skipLibCheck --declaration --allowJs --emitDeclarationOnly --outDir ./types ./src/index.js",
        "test": "c8 node --test",
        "cpd": "node_modules/jscpd/bin/jscpd src",
        "vulnerabilities": "npm audit --omit=dev --audit-level=moderate"
    },
    "files": [
        "./eslintconfig.json",
        "./src/index.js",
        "./src/eslint.config.js",
        "./src/rules/import.js",
        "./src/rules/jsdoc.js",
        "./src/rules/node.js",
        "./src/rules/promise.js",
        "./src/rules/sonar.js",
        "./src/rules/stylistic.js",
        "./src/rules/tro.js",
        "./types/index.d.ts",
        "./types/eslint.config.d.ts",
        "./types/rules/import.d.ts",
        "./types/rules/jsdoc.d.ts",
        "./types/rules/node.d.ts",
        "./types/rules/promise.d.ts",
        "./types/rules/sonar.d.ts",
        "./types/rules/stylistic.d.ts",
        "./types/rules/tro.d.ts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/trojs/lint.git"
    },
    "keywords": [
        "lint"
    ],
    "author": {
        "name": "Pieter Wigboldus",
        "url": "https://trojs.org/"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/trojs/lint/issues"
    },
    "homepage": "https://github.com/trojs/lint#readme",
    "dependencies": {
        "@stylistic/eslint-plugin": "^5.0.0",
        "eslint": "^9.19.0",
        "eslint-import-context": "^0.2.0",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.6.1",
        "eslint-plugin-jsdoc": "^61.0.0",
        "eslint-plugin-n": "^17.15.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-sonarjs": "^3.0.1",
        "globals": "^16.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@types/node": "^24.9.2",
        "c8": "^10.1.3",
        "deno": "^2.5.6",
        "jscpd": "^4.0.5",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">= 22"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/w3nl"
    },
    "overrides": {
        "brace-expansion@>=2.0.1 <=4.0.0": "4.0.1"
    }
}
